{
  "manifest_version": 2,
  "name": "Youtube Chat Overlay",
  "version": "1.2.0",
  "description": "Youtubeのシアターモードでチャットをオーバーレイ表示する。",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon_32.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://*.youtube.com/*"
  ],
  "icons" : {
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "css": ["css/content.css"]
    }
  ]
}
